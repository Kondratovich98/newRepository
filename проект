
#include <stdio.h>
#include <math.h>

double Proizvedenie (double *a, int size) // найти произведение элементов между максимальным и минимальным

int first,
    end;
double pr = 1;

Poisk(a, size, &first, &end);
if (first < end)
{
    for (first++; first < end; first++)
    {
        pr *= a[first];
    }
}
else
{
swap(&first, &end); // поменять местами
 for (first++; first < end; first++)
    {
        pr *= a[first];
    }
}
return pr;
}
void swap (int *a, int *b) //поменять местами номера через указатели

{
    int c = *a;
    *a = *b;
    *b = c;
}

void PrintfMatix(double *array, int size)
{
  int i = 0,
      k;
            for ( k = 0; k < size; k++)
            {
                printf("%.1lf ", array[k]);
                i++;
                if ((i % 10) == 0) printf("\n");
            }

}



int main()
{
        int size;
        double *a, S=0;
        int i, j, tmp;
        int max, min;

        printf("razmer massiva\n");
        scanf("%d",&size);

        a = (double*)malloc(size*sizeof(double));


        srand( time( NULL ));
        for(i = 0; i < size; i++)
                a[i] = (rand() % 201) - 100;
        for(i = 0; i < size; i++)
              { printf("chislo= %f\n ",a[i]);
                if (a[i]<0)
                {S+=a[i];}
              }

        printf("S=%.1f", S);

        printf (" proizvedenie = %.1lf \n", Proizvedenie(a, size));


        for(i = 0 ; i < size - 1; i++)
        {
       // сравниваем два соседних элемента.
            for(j = 0 ; j < size - i - 1 ; j++)
            {
                if(a[j] > a[j+1])
                {
                    // если они идут в неправильном порядке, то
                    //  меняем их местами.
                    tmp = a[j];
                    a[j] = a[j+1] ;
                    a[j+1] = tmp;
                }
            }
        }

        for (i = 0; i < size; i++)
            {
                printf ("%.1lf  ", a[i]);
            }



        PrintfMatix(a, size);

free(a);
return 0;
}
